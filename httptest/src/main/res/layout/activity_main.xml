<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_param"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="输入查询参数："
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/edit_param"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/text_param"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/text_param"
        app:layout_constraintTop_toBottomOf="@+id/text_param"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="查询"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_param"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/text_param"
        app:layout_constraintTop_toBottomOf="@+id/text_param" />

    <TextView
        android:id="@+id/text_result_title"
        android:gravity="center"
        android:layout_width="98dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:text="查询结果"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />


    <TextView
        android:id="@+id/text_car_owner"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="320dp"
        android:text="车辆所有："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_car_owner_result"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="张三"
        app:layout_constraintBottom_toBottomOf="@+id/text_car_owner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toEndOf="@+id/text_car_owner"
        app:layout_constraintTop_toTopOf="@+id/text_car_owner"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_id_card"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="身份证号："
        app:layout_constraintEnd_toEndOf="@+id/text_car_owner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_car_owner"
        app:layout_constraintTop_toBottomOf="@+id/text_car_owner" />

    <TextView
        android:id="@+id/text_id_card_result"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="64XXXXXXXXXXXXXXXX"
        app:layout_constraintStart_toEndOf="@+id/text_id_card"
        app:layout_constraintTop_toBottomOf="@+id/text_car_owner_result" />

    <TextView
        android:id="@+id/text_car_number"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="车牌号码："
        app:layout_constraintEnd_toEndOf="@+id/text_id_card"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_id_card"
        app:layout_constraintTop_toBottomOf="@+id/text_id_card" />

    <TextView
        android:id="@+id/text_car_number_result"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="宁XXX"
        app:layout_constraintStart_toEndOf="@+id/text_car_number"
        app:layout_constraintTop_toBottomOf="@+id/text_id_card_result" />


    <TextView
        android:id="@+id/text_car_brand"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="车辆品牌："
        app:layout_constraintEnd_toEndOf="@+id/text_car_number"
        app:layout_constraintStart_toStartOf="@+id/text_car_number"
        app:layout_constraintTop_toBottomOf="@+id/text_car_number" />

    <TextView
        android:id="@+id/text_car_brand_result"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="北京现代"
        app:layout_constraintStart_toEndOf="@+id/text_car_brand"
        app:layout_constraintTop_toBottomOf="@+id/text_car_number_result" />


    <TextView
        android:id="@+id/text_car_type"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="车辆类型："
        app:layout_constraintEnd_toEndOf="@+id/text_car_brand"
        app:layout_constraintStart_toStartOf="@+id/text_car_brand"
        app:layout_constraintTop_toBottomOf="@+id/text_car_brand" />

    <TextView
        android:id="@+id/text_car_type_result"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="小型轿车"
        app:layout_constraintStart_toEndOf="@+id/text_car_type"
        app:layout_constraintTop_toBottomOf="@+id/text_car_brand_result" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="家庭住址："
        app:layout_constraintEnd_toEndOf="@+id/text_car_type"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_car_type"
        app:layout_constraintTop_toBottomOf="@+id/text_car_type" />

    <TextView
        android:id="@+id/text_address_result"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="宁夏银川市西夏区北京西路峡口巷"
        app:layout_constraintStart_toEndOf="@+id/text_address"
        app:layout_constraintTop_toBottomOf="@+id/text_car_type_result" />

</androidx.constraintlayout.widget.ConstraintLayout>